FROM node:21-alpine as builder
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with simple approach
RUN npm ci || npm install

# Copy source code
COPY . ./

# Build the application
RUN npm run build

FROM nginx:alpine
COPY --from=builder /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
