# NPM Configuration for Jenkins CI/CD
# Disable optional dependencies to avoid tar errors
optional=false

# Disable audit and fund messages to speed up installation
audit=false
fund=false

# Use offline mode when possible
prefer-offline=true

# Increase timeout for slow networks
timeout=600000

# Disable progress bar in CI
progress=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Registry configuration
registry=https://registry.npmjs.org/

# Cache configuration
cache-min=86400 