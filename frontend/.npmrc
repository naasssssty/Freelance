# Reliable NPM Configuration for CI/CD
# Use primary registry with fallback options
registry=https://registry.npmjs.org/

# Network reliability settings (in milliseconds)
timeout=600000
fetch-timeout=600000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-retries=5

# Speed optimizations
prefer-offline=true
cache-min=86400
audit=false
fund=false

# Compatibility settings
legacy-peer-deps=true 